package binary_search;

public class Test {
	
	
	public static int binarySearch(int arr[],int x) {
		int start=0;
		int end=arr.length-1;
		int mid=(start + end) / 2;
		
		
		while(start<=end) {
			if(arr[mid]==x) {
				return mid;
			}else if(mid<x) {
				start = mid +1
			}else {
				end = mid-1;
			}
			
		}
		return -1;
		
	}
	
	
	public static void main(String[] args) {
	int arr[]= {2, 4, 5, 8, 9, 15, 21, 28};	
	binarySearch(arr, 21);
		
	}

}
